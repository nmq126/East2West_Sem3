@model East2West.Models.Car

@{
    ViewBag.Title = "East2West - " + Model.CarModel.Name;
    Layout = "~/Views/Shared/_LayoutPageClient.cshtml";
}

@section Section
{
    @{
        var img = "https://res.cloudinary.com/nmqdec6/image/upload/v1655735551/Project%20East2West/default-thumbnail_bd4eth.jpg";
        if (Model.Thumbnail != null)
        {
            img = Model.Thumbnail.Split(',').ToList<String>().First();
        }
    }
    <section class="parallax-window" data-parallax="scroll" data-image-src="@img" data-natural-width="1400" data-natural-height="470">
        <div class="parallax-content-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h1>@Model.CarModel.Name</h1>
                        <span>@Model.LisencePlate</span>
                        <span class="rating">
                            @for (int j = 0; j < Model.Rating; j++)
                            {
                                <i class="icon-smile voted"></i>

                            }
                        </span>
                    </div>
                    <div class="col-md-4">
                        <div id="price_single_main">
                            from/per day <span><sup>$</sup>@Model.PricePerDay</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

<main>
    <div id="position">
        <div class="container">
            <ul>
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#">Cars</a>
                </li>
                <li>Car Details</li>
            </ul>
        </div>
    </div>
    <!-- End Position -->
    <!-- End Map -->

    <div class="container margin_60">
        <div class="row">
            <div class="col-lg-8" id="single_tour_desc">

                <div id="single_tour_feat">
                    <ul>
                        <li><i class="icon_set_1_icon-29"></i>Up to @Model.SeatCapacity passengers</li>
                        <li><i class="icon_set_1_icon-6"></i>Hotel Pick up</li>
                        <li><i class="icon_set_1_icon-13"></i>Accessibility</li>
                        <li><i class="icon_set_1_icon-22"></i>Pet allowed</li>
                        <li><i class="icon_set_1_icon-33"></i>Large baggage</li>
                    </ul>
                </div>

                <p class="d-block d-lg-none"><a class="btn_map" data-bs-toggle="collapse" href="#collapseMap" aria-expanded="false" aria-controls="collapseMap" data-text-swap="Hide map" data-text-original="View on map">View on map</a></p>
                <!-- Map button for tablets/mobiles -->

                <div class="row">
                    <div class="col-lg-3">
                        <h3>Description</h3>
                    </div>
                    <div class="col-lg-9">
                        @Html.Raw(HttpUtility.HtmlDecode(Model.Description))
                    </div>
                </div>

                <hr>

                <div class="row">
