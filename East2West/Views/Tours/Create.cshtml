                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label">Departure</label>
                                                <div class="col-md-10">
                                                    @Html.DropDownListFor(model => model.DepartureId, ViewBag.DepartureId as SelectList, new { @class = "custom-select form-control" })
