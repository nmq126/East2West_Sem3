                                                    <button id="upload_widget" class="cloudinary-button">Upload images</button>
                                                    <div id="upload_button_holder" style="display:flex;flex-wrap:wrap;">
                                                    </div>
                                                    <input type="hidden" class="form-control"
                                                           placeholder="Upload thumbnail!"
