@model East2West.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin | Login </title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Stylesheet -->
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/img/logoMini.png")">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="@Url.Content("~/Content/admin_vendor/css/base/bootstrap.min.css")" media="screen" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/admin_vendor/css/base/elisyam-1.5.css")" media="screen" type="text/css" />
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-01">
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src=@Url.Content("~/Content/img/logoMini.png") alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Begin Section -->
    <div class="container-fluid h-100 overflow-y">
        <div class="row flex-row h-100">
            <div class="col-12 my-auto">
                <div class="lock-form mx-auto">
                    <div class="text-center">
                        <img style="width:100px" src="@Url.Content("~/Content/img/logoMini.png")" alt="...">
                    </div>
                    <h3>Sign in for Administrator</h3>
                    @using (Html.BeginForm("LoginAdmin", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form>
                            <div class="group material-input">
                                @Html.EditorFor(model => model.UserName)
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Username</label>
                                <p id="usercheck" class="small mt-1" style="color: red; display:none;">
                                    **Username is required
                                </p>
                            </div>
                            <div class="group material-input">
                                @Html.EditorFor(model => model.Password)
                                <span class="highlight"></span>
                                <span class="bar"></span>
                                <label>Password</label>
                                <p id="conpasscheck" class="small mt-1" style="color: red; display: none">
                                    **Password is required
                                </p>
                            </div>
                            @Html.ValidationMessage("LoginError", new { @class = "text-danger float-left mb-4" })
                            <div class="button text-center">
                                <button id="btn_login" class="btn btn-lg btn-gradient-01">
                                    Sign in
                                </button>
                            </div>
                        </form>

                    }
                </div>
            </div>
        </div>
        <!-- End Container -->
    </div>
    <!-- End Section -->
    <!-- Begin Vendor Js -->
    <script src="~/Content/admin_vendor/js/base/jquery.min.js"></script>
    <script src="~/Content/admin_vendor/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/admin_vendor/js/app/app.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <!-- End Page Vendor Js -->
    <script>
        $('#btn_login').on('click', function (e) {
            e.preventDefault();
            var userName = $('#UserName').val();
            var password = $('#Password').val();
            if (userName === "") {
                $('#usercheck').show();
            }
            if (password === "") {
                $('#conpasscheck').show();
            }

            if (userName !== "" && password !== "") {
                $('#btn_login').unbind('click').click();
            }
        });

        $('#UserName').on('keyup', function () {
            var userName = $('#UserName').val();
            if (userName === "") {
                $('#usercheck').show();
            } else {
                $('#usercheck').hide();
            }
        });

        $('#Password').on('keyup', function () {
            var password = $('#Password').val();
            if (password === "") {
                $('#conpasscheck').show();
            } else {
                $('#conpasscheck').hide();
            }
        });
    </script>
</body>
</html>
