@model IEnumerable<East2West.Models.Flight>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="widget has-shadow">
            <div class="widget-body">
                @using (Html.BeginForm("Index", "Tours", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-3">
                            <label class="form-control-label">Location Departure</label>
                            <div class="">
                                @Html.TextBox("name", ViewBag.Name as string, new { @class = "form-control", placeholder = "Find by name" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label class="form-control-label">Location Destination</label>
                            <div class="">
                                @Html.TextBox("id", ViewBag.Id as string, new { @class = "form-control", placeholder = "Find by name" })
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <label class="form-control-label">Sort by</label>
                            <div class="select mb-3">
                                <select name="sortType" id="sortType" class="custom-select form-control">
                                    <option value="">Sort by (Lastest default)</option>
                                    <option value="createdAt_asc" @(ViewBag.SortType == "createdAt_asc" ? "selected" : "")>Latest</option>
                                    <option value="createdAt_desc" @(ViewBag.SortType == "createdAt_desc" ? "selected" : "")>Oldest</option>
                                    <option value="duration_asc" @(ViewBag.SortType == "duration_asc" ? "selected" : "")>Duration (Increase)</option>
                                    <option value="duration_desc" @(ViewBag.SortType == "duration_desc" ? "selected" : "")>Duration (Decrease)</option>
                                    <option value="rating_asc" @(ViewBag.SortType == "rating_asc" ? "selected" : "")>Rating (Increase)</option>
                                    <option value="rating_desc" @(ViewBag.SortType == "rating_desc" ? "selected" : "")>Rating (Decrease)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <label class="form-control-label">Status</label>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div style="height:28px"></div>
                            <div>
                                <button type="submit" class="btn btn-primary mr-1 mb-2">Search</button>
                                <button type="reset" class="btn btn btn-outline-secondary mr-1 mb-2"><a href="/Tours">Clear</a></button>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Default -->
        <div class="widget has-shadow">
            <div class="widget-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th>
                                Location Departure Name
                                @*@Html.DisplayNameFor(model => model.LocationDeparture.Name)*@
                            </th>
                            <th>
                                Location Destination Name
                                @*@Html.DisplayNameFor(model => model.LocationDestination.Name)*@
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Thumbnail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsRoundTicket)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DepartureAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Duration)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReturnAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UpdatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeletedAt)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationDeparture.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationDestination.Name)
                                </td>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.Thumbnail)" alt="Alternate Text" width="90" height="90"/>
                                </td>
                                <td style="text-align:center">
                                    @{
                                        string isRound = item.IsRoundTicket == true ? "X" : "";
                                    }
                                    @isRound
                                    @*@Html.DisplayFor(modelItem => item.IsRoundTicket)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartureAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReturnAt)
                                </td>
                                <td>
                                    @{
                                        string statusName = (item.Status == 1) ? "Active" : "Disable";
                                    }
                                    @statusName
                                    @*@Html.DisplayFor(modelItem => item.Status)*@
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DeletedAt)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </table>
            </div>
        </div>
        <!-- End Default -->
    </div>
</div>
